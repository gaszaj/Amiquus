    max-width: 65ch;
    margin-left: auto;
    margin-right: auto;
  }

  /* Headings */
  .prose :global(h2),
  .prose :global(h3) {
    color: black;
    font-weight: 700;
  }
  .prose :global(h2) {
    font-size: 1.875rem; /* 30px */
    margin-block-start: 2.5rem;
    margin-block-end: 1.5rem;
  }
  .prose :global(h3) {
    font-size: 1.5rem; /* 24px */
    margin-block-start: 2rem;
    margin-block-end: 1rem;
  }

  /* Paragraphs */
  .prose :global(p) {
    color: #374151; /* Tailwind gray-700 */
    margin-block-end: 1.25rem;
    line-height: 1.75;
  }

  /* Links */
  .prose :global(a) {
    color: black;
    text-decoration: underline;
    text-decoration-color: #BCEF2F; /* signal-green */
    text-underline-offset: 4px;
    text-decoration-skip-ink: auto;
    transition: color 0.2s ease, text-decoration-color 0.2s ease;
  }
  .prose :global(a:hover) {
    color: #BCEF2F;
    text-decoration-color: black;
  }

  /* --- MODIFIED: List Styling --- */
  .prose :global(ul),
  .prose :global(ol) {
    list-style: none;
    margin-block-end: 1.25rem;
    padding-inline-start: 0;
  }

  .prose :global(li) {
    position: relative;
    padding-inline-start: 1.75rem; 
    margin-block-end: 0.75rem;
    line-height: 1.75;
  }

  /* Marker for Unordered Lists (ul > li) */
  /* This rule now ONLY applies to direct children of a UL, fixing the nested list issue. */
  .prose :global(ul > li::before) {
    content: "";
    position: absolute;
    inset-inline-start: 0.25rem;
    top: 0.75rem;
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background: #BCEF2F;
    border: 2px solid black;
  }
  
  /* Counter for Ordered Lists (ol) */
