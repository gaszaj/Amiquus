    counter-reset: list-counter;
  }
  /* Marker for Ordered Lists (ol > li) */
  /* This rule now ONLY applies to direct children of an OL, fixing the nested list issue. */
  .prose :global(ol > li::before) {
    content: counter(list-counter) ".";
    counter-increment: list-counter;
    position: absolute;
    inset-inline-start: 0;
    font-weight: 600;
    color: black;
  }
  
  /* Text Formatting */
  .prose :global(u) { /* No changes needed */ }
  .prose :global(b), .prose :global(strong) { font-weight: 700; color: black; }
  .prose :global(i), .prose :global(em) { font-style: italic; }

  /* Tables */
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-block: 2rem;
    font-size: 0.9em;
  }
  .prose :global(thead) { background-color: #f3f4f6; }
  .prose :global(th), .prose :global(td) {
    border: 1px solid #e5e7eb;
    padding-block: 0.75rem;
    padding-inline: 1rem;
    text-align: start;
  }
  .prose :global(th) { font-weight: 600; color: #111827; }
  .prose :global(tbody tr:nth-child(even)) { background-color: #f9fafb; }

  /* Spacing & Misc */
  .prose :global(h2 + p) { margin-block-start: 1rem; }
  .prose :global(p + ul), .prose :global(p + ol) { margin-block-start: 0.5rem; }
  .prose :global(.faq-section) { margin-block-start: 2rem; }
  .prose :global(.faq-section p) { margin-block-end: 1.5rem; }

  /* Highlight Classes */
  .prose :global(.pseo1) {
    background-color: #f9fafb;
    border-inline-start: 4px solid #BCEF2F;
    padding: 0.5rem 1rem;
    border-radius: 4px;
  }
  .prose :global(.pseo2) { /* No changes needed */ }
  .prose :global(.pseo3) { /* No changes needed */ }

  /* Animations */
  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
  @keyframes slideUp { from { transform: translateY(20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }
  :global(.animate-fade-in) { animation: fadeIn 0.5s ease-in-out; }
  :global(.animate-slide-up) { animation: slideUp 0.5s ease-out; }

  /* Author Cards */
  .prose :global(.author-card) { text-decoration: none; }
  .prose :global(.author-card:hover) { text-decoration: none; }
  .prose :global(.author-card h3) { text-decoration: none; }
  .prose :global(.author-card:hover h3) { text-decoration: none; }
  .prose :global(.author-card img) { backface-visibility: hidden; transform: translateZ(0); -webkit-font-smoothing: subpixel-antialiased; }

  /* Form Validation */
  :where(input, select, textarea):user-invalid { border-color: #ef4444; }

  /* RTL Specifics */
  [dir="rtl"] .prose :global(p),
  [dir="rtl"] .prose :global(h1),
  [dir="rtl"] .prose :global(h2),
  [dir="rtl"] .prose :global(h3) {
    letter-spacing: 0;
  }
  [dir="rtl"] .prose :global(.line-clamp-3) {
    text-align: start;
  }

  /* Definition Lists (dl, dt, dd) Styling */
  .prose :global(dl) {
    margin-block: 2rem 2rem; /* Add vertical spacing before and after the list */
    padding: 0;
  }
  .prose :global(dt) {
    font-weight: 700; /* Make term bold */
    color: #111827;   /* Use dark color for term */
    margin-top: 1.25rem; /* Space above each term */
    margin-bottom: 0.25rem; /* Small space below term */
    font-size: 1.1em; /* Slightly larger font for term */
  }
  .prose :global(dd) {
    margin-left: 1.5rem; /* Indent definition */
    margin-bottom: 1rem; /* Space below each definition */
    color: #374151; /* Subtle gray for definition text */
    font-size: 1em;
    line-height: 1.7;
  }

  /* --- Responsive Table Styling for .prose --- */
  /*
    To ensure tables are mobile-friendly, we wrap tables in a div with overflow-x: auto.
    This allows horizontal scrolling on small screens. We also ensure min-width and spacing.
    RTL support is preserved by using logical properties.
  */
  .prose :global(.table-responsive) {
    width: 100%;
