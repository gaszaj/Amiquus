---
// src/pages/setup-alerts.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import qrCode from '/public/telegram/tg_amiquus_qr.webp';
import { Image } from 'astro:assets';

// Page-specific metadata
const title = "Set Up Your Car Alerts - Amiquus";
const description = "Configure your personalized car listing notifications. Select websites to monitor, set your car criteria, and get notified when your dream car is available.";

// Props for BaseLayout - placeholders for now.
const languageIso = "en";
const countryCode = "US";
const contentOrientation = "ltr";
const languageLinksMap: Record<string, string> = { 'en': '/en', 'de': '/de' };

const locale = Astro.url.pathname.split('/')[1] || 'en';
---

<BaseLayout
  languageIso={languageIso}
  countryCode={countryCode}
  contentOrientation={contentOrientation}
  title={title}
  description={description}
  languageLinksMap={languageLinksMap}
>
  <main class="py-20 sm:py-28">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <!-- Page Header -->
        <div class="text-center mb-12">
          <h1 class="text-4xl lg:text-5xl font-bold text-foreground mb-4 animate-on-scroll">
            Set Up Your <span class="text-primary">Car Alerts</span>
          </h1>
          <p class="text-lg text-muted-foreground animate-on-scroll" data-delay="100">
            Configure your personalized car listing notifications and start receiving instant alerts.
          </p>
        </div>
        
        <form id="setup-alerts-form" class="space-y-8">
          <!-- 1. Car Preferences -->
          <div class="bg-card border border-border rounded-xl shadow-lg p-6 sm:p-8 animate-on-scroll">
            <h2 class="text-2xl font-bold text-foreground mb-6">1. Car Preferences</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <!-- Car Brand -->
              <div class="text-start">
                <label for="car-brand" class="block text-sm font-medium text-foreground mb-1">Car Brand</label>
                <select id="car-brand" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary">
                  <option value="">Select Brand</option>
                </select>
              </div>
              <!-- Car Model -->
              <div class="text-start">
                <label for="car-model" class="block text-sm font-medium text-foreground mb-1">Car Model</label>
                <select id="car-model" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary" disabled>
                  <option value="">Select Brand First</option>
                </select>
              </div>
              <!-- Fuel Type -->
              <div class="sm:col-span-2 text-start">
                <label for="fuel-type" class="block text-sm font-medium text-foreground mb-1">Fuel Type</label>
                <select id="fuel-type" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary">
                  <option value="">Any Fuel Type</option>
                </select>
              </div>
              <!-- Min/Max Price -->
              <div>
                <label for="price-min" class="block text-sm font-medium text-foreground mb-1">Min Price (€)</label>
                <input type="number" id="price-min" placeholder="e.g., 5000" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary">
              </div>
              <div>
                <label for="price-max" class="block text-sm font-medium text-foreground mb-1">Max Price (€)</label>
                <input type="number" id="price-max" placeholder="e.g., 50000" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary">
              </div>
              <!-- Min/Max Year -->
              <div>
                <label for="year-min" class="block text-sm font-medium text-foreground mb-1">Min Year</label>
                <input type="number" id="year-min" placeholder="e.g., 2015" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary">
              </div>
              <div>
                <label for="year-max" class="block text-sm font-medium text-foreground mb-1">Max Year</label>
                <input type="number" id="year-max" placeholder="e.g., 2023" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary">
              </div>
              <!-- Max Kilometers -->
              <div class="sm:col-span-2">
                <label for="max-kilometers" class="block text-sm font-medium text-foreground mb-1">Max Kilometers</label>
                <input type="number" id="max-kilometers" placeholder="e.g., 100000" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary">
              </div>
            </div>
          </div>

          <!-- 2. Monitoring Options -->
          <div class="bg-card border border-border rounded-xl shadow-lg p-6 sm:p-8 animate-on-scroll">
            <h2 class="text-2xl font-bold text-foreground mb-2">2. Monitoring Options</h2>
            <p class="text-sm text-muted-foreground mb-6">Select the websites and update frequency for your alerts.</p>
            <!-- Websites -->
            <div class="mb-6">
              <label class="block text-sm font-medium text-foreground mb-2">Websites to Monitor</label>
              <div id="websites-container" class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                <!-- Website checkboxes will be injected here by JS -->
              </div>
            </div>
            <!-- Facebook URL -->
            <div id="facebook-instructions" class="hidden space-y-4 mb-6">
              <div>
                <label for="facebook-url" class="block text-sm font-medium text-foreground mb-1">Facebook Marketplace URL</label>
                <p class="text-xs text-muted-foreground mb-2">Copy the search URL from Facebook Marketplace and paste it here.</p>
                <input type="url" id="facebook-url" placeholder="https://www.facebook.com/marketplace/..." class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary">
              </div>
              <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden border border-border">
                <iframe width="100%" height="315" src="https://www.youtube.com/embed/jNQXAC9IVRw" title="How to copy Facebook Marketplace search link" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen loading="lazy"></iframe>
              </div>
            </div>
            <!-- Update Frequency -->
            <div>
              <label for="update-frequency" class="block text-sm font-medium text-foreground mb-1">Update Frequency</label>
              <select id="update-frequency" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary">
                <!-- Frequency options will be injected here by JS -->
              </select>
            </div>
          </div>

          <!-- 3. Telegram Setup -->
          <div class="bg-card border border-border rounded-xl shadow-lg p-6 sm:p-8 animate-on-scroll">
            <h2 class="text-2xl font-bold text-foreground mb-6">3. Telegram Setup</h2>
            <div class="space-y-4">
              <div>
                <label for="telegram-username" class="block text-sm font-medium text-foreground mb-1">Your Telegram Username</label>
                <input type="text" id="telegram-username" placeholder="@yourusername" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary" required>
                <p class="text-xs text-muted-foreground mt-1">This is required so we can link your subscription to your account.</p>
              </div>
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 text-start">
                <div>
                  <p class="text-sm text-muted-foreground">To activate alerts, send a message to our bot at <a href="https://t.me/Amiquus_bot" target="_blank" rel="noopener noreferrer" class="font-semibold text-primary hover:underline">t.me/Amiquus_bot</a></p>
                  <p class="text-xs text-muted-foreground mt-1">A simple "Hi" is enough to start.</p>
                </div>
                <Image src={qrCode} alt="QR code to open Amiquus Telegram Bot" class="w-24 h-24 sm:w-28 sm:h-28 flex-shrink-0" loading="lazy" decoding="async"/>
              </div>
              <div class="flex items-start gap-3">
                <input type="checkbox" id="has-contacted-bot" class="mt-1 h-4 w-4 rounded border-border text-primary focus:ring-primary">
                <label for="has-contacted-bot" class="text-sm text-muted-foreground">I have sent a message to the Amiquus Telegram bot.</label>
              </div>
            </div>
            <!-- Telegram Preview -->
            <div class="mt-8">
              <h3 class="text-lg font-semibold text-foreground mb-4">Notification Preview</h3>
              <div class="w-full bg-muted rounded-xl p-4 border border-border space-y-4">
                <div class="flex items-start space-x-3 rtl:space-x-reverse">
                  <div class="bg-blue-500 rounded-full h-10 w-10 min-w-[2.5rem] flex items-center justify-center text-white font-bold">A</div>
                  <div class="bg-card rounded-lg p-3 w-full max-w-md">
                    <p class="text-sm text-foreground"><strong>New Car Alert!</strong></p>
                    <p class="text-sm text-foreground">Brand: Volkswagen</p>
                    <p class="text-sm text-foreground">Model: Arteon</p>
                    <p class="text-sm text-muted-foreground">Price: €36,850</p>
                    <p class="text-sm text-muted-foreground">Year: 2007</p>
                    <p class="text-sm text-muted-foreground">Kilometers: 73,000</p>
                    <p class="text-sm text-muted-foreground">Location: Maribor</p>
                    <p class="text-sm text-muted-foreground">Seling platform: Avto.net</p>
                    <a href="#" class="text-sm text-blue-500">View Listing</a>
                  </div>
                </div>
                <div class="flex items-start space-x-3 rtl:space-x-reverse">
                  <div class="bg-blue-500 rounded-full h-10 w-10 min-w-[2.5rem] flex items-center justify-center text-white font-bold">A</div>
                  <div class="bg-card rounded-lg p-3 w-full max-w-md">
                    <p class="text-sm text-foreground">Brand: Renault</p>
                    <p class="text-sm text-foreground">Model: Scenic</p>
                    <p class="text-sm text-muted-foreground">Price: €8,200</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- 4. Review & Checkout -->
          <div class="bg-card border border-border rounded-xl shadow-lg p-6 sm:p-8 animate-on-scroll">
            <h2 class="text-2xl font-bold text-foreground mb-6">4. Review & Checkout</h2>
            <!-- Price Breakdown -->
            <div class="border-y border-border py-4 space-y-2 mb-6">
              <div class="flex justify-between items-center text-muted-foreground"><span id="price-base-label">Base Plan</span><span id="price-base-value">$9.99</span></div>
              <div class="flex justify-between items-center text-muted-foreground"><span id="price-websites-label">Additional Websites (0)</span><span id="price-websites-value">$0.00</span></div>
              <div class="flex justify-between items-center text-muted-foreground"><span id="price-frequency-label">Frequency Upgrade</span><span id="price-frequency-value">$0.00</span></div>
              <div class="flex justify-between items-center text-foreground font-bold text-lg pt-2 border-t border-border mt-2"><span>Total Monthly</span><span id="price-total-value">$9.99</span></div>
            </div>
            <!-- Terms -->
            <div class="space-y-4 mb-6">
              <div class="flex items-start gap-3">
                <input type="checkbox" id="terms-agreed" class="mt-1 h-4 w-4 rounded border-border text-primary focus:ring-primary">
                <label for="terms-agreed" class="text-sm text-muted-foreground">I agree to the <a href="/terms" target="_blank" class="text-primary hover:underline">Terms of Service</a> and <a href="/privacy" target="_blank" class="text-primary hover:underline">Privacy Policy</a>.</label>
              </div>
              <p class="text-xs text-muted-foreground">This is a recurring subscription. You can manage or cancel your plan at any time from your dashboard.</p>
            </div>
            <!-- Submit Button -->
            <button type="submit" id="checkout-btn" class="w-full flex items-center justify-center px-6 py-4 rounded-lg font-semibold text-lg bg-primary text-primary-foreground hover:opacity-90 transition disabled:opacity-50 disabled:cursor-not-allowed">
              <span id="checkout-text">Proceed to Checkout</span>
              <span id="checkout-loading" class="hidden"><div class="w-5 h-5 border-2 border-current border-t-transparent rounded-full animate-spin ms-2"></div></span>
            </button>
          </div>
        </form>

      </div>
    </div>
  </main>
</BaseLayout>