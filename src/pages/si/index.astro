    </div>
  </div>
</section>

<style>
  /* Force-dark pack (header visual island) */
  .force-dark{
    --c-primary: var(--amq-primary);
    --c-success: var(--amq-success);
    --c-danger:  var(--amq-danger);
    --c-surface: var(--amq-surface);
    --c-elev:    var(--amq-elev);
    --c-text:    var(--amq-text);
    --c-muted:   var(--amq-muted);
    --c-border:  var(--amq-border);
    color-scheme: dark;
    color: rgb(var(--c-text));
  }
  .force-dark .text-muted{ color: rgb(var(--c-muted)); }

  /* Chips (variable-aware) */
  #amiquus-probsol .chip{
    display:inline-flex; align-items:center; justify-content:center;
    padding:.25rem .625rem; font-size:.75rem; border-radius:9999px;
    border:1px solid rgb(var(--chip) / .35); color: rgb(var(--chip) / .95);
    background: linear-gradient(180deg, rgb(var(--chip)/.12), rgb(var(--chip)/.05));
  }
  .dark #amiquus-probsol .chip{
    border-color: rgb(var(--chip)/.35) !important;
    color: rgb(var(--chip)/.9) !important;
    background: linear-gradient(180deg, rgb(var(--chip)/.10), rgb(var(--chip)/.04)) !important;
  }

  /* Inline SVGs follow currentColor */
  .themed-svg *[fill]{ fill: currentColor !important; }
  .themed-svg *[stroke]{ stroke: currentColor !important; }

  /* Proof row separator */
  #amiquus-probsol .sep { background: currentColor; opacity:.22; }

  /* Animations (unchanged) */
  @media (prefers-reduced-motion:no-preference){
    #amiquus-probsol .will-animate{opacity:0;transform:translateY(12px);transition:opacity .6s ease, transform .6s ease}
    #amiquus-probsol .will-animate.in-view{opacity:1;transform:none}
    #amiquus-probsol [data-anim="fade-right"]{transform:translateX(-12px)}
    #amiquus-probsol [data-anim="fade-left"]{transform:translateX(12px)}
    #amiquus-probsol .in-view[data-anim="fade-right"],#amiquus-probsol .in-view[data-anim="fade-left"]{transform:none}

    .sand-top{animation:sandTop 2.2s infinite ease-in-out}
    .sand-bot{animation:sandBot 2.2s infinite ease-in-out}
    @keyframes sandTop{0%{opacity:1;transform:translateY(0)}50%{opacity:.2;transform:translateY(4px)}100%{opacity:1;transform:translateY(0)}}
    @keyframes sandBot{0%{opacity:.2;transform:translateY(-4px)}50%{opacity:1;transform:translateY(0)}100%{opacity:.2;transform:translateY(-4px)}}

    .icon-float{animation:iconFloat 3s ease-in-out infinite}
    @keyframes iconFloat{0%,100%{transform:translateY(-4px)}50%{transform:translateY(4px)}}
    .icon-wobble{animation:iconWobble .8s ease-in-out infinite}
    @keyframes iconWobble{0%,100%{transform:rotate(-2deg)}50%{transform:rotate(2deg)}}

    @keyframes ctaGradient{0%{background-position:0% 50%}100%{background-position:100% 50%}}
    @keyframes ctaPulse{
      0%{box-shadow:0 0 0 0 rgba(59,130,246,.35)}
      70%{box-shadow:0 0 0 12px rgba(59,130,246,0)}
      100%{box-shadow:0 0 0 0 rgba(59,130,246,0)}
    }
    @keyframes ctaPulseDark{
      0%{box-shadow:0 0 0 0 rgb(var(--amq-primary)/.55)}
      70%{box-shadow:0 0 0 14px rgb(var(--amq-primary)/0)}
      100%{box-shadow:0 0 0 0 rgb(var(--amq-primary)/0)}
    }
  }

  /* Dark-mode specific button pulse */
  .dark #amiquus-probsol .cta-btn{
    animation: ctaGradient 5s linear infinite, ctaPulseDark 1.8s ease-in-out infinite !important;
  }
</style>

<script>
  // One-time reveal on scroll (scoped)
  (function(){
    const root = document.getElementById('amiquus-probsol');
    if(!root) return;
    const els = root.querySelectorAll('.will-animate');
    if(!('IntersectionObserver' in window)){ els.forEach(el=> el.classList.add('in-view')); return; }
    const io=new IntersectionObserver((entries)=>{
      entries.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add('in-view'); io.unobserve(e.target); }});
    },{threshold:.15,rootMargin:'0px 0px -10% 0px'});
    els.forEach(el=> io.observe(el));
  })();
</script>

  
  

  






