---
// src/pages/si/index.astro

import BaseLayout from '../../layouts/BaseLayout.astro';

// Page-specific metadata
const title = "Amiquus - Automated Car Listing Alerts";
const description = "Get real-time notifications for new car listings that match your criteria. Monitor multiple platforms automatically with instant Telegram alerts.";

// Props for BaseLayout - simplified to match working pattern
const languageIso = "en";
const countryCode = "US";
const contentOrientation = "ltr";
const languageLinksMap = { 'en': '/en', 'de': '/de' };
---

<BaseLayout
  languageIso={languageIso}
  countryCode={countryCode}
  contentOrientation={contentOrientation}
  title={title}
  description={description}
  languageLinksMap={languageLinksMap}
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-background py-20 sm:py-32">
    <div class="absolute inset-0 bg-gradient-to-br from-muted via-background to-background -z-10"></div>
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="text-center lg:text-start animate-on-scroll">
          <h1 class="text-4xl lg:text-5xl font-bold leading-tight text-foreground mb-6">
            Never Miss Your <span class="text-primary">Perfect Car Deal</span> Again
          </h1>
          <p class="text-lg text-muted-foreground mb-8 max-w-xl mx-auto lg:mx-0">
            Amiquus monitors multiple car listing platforms 24/7 and sends instant Telegram notifications when vehicles matching your criteria become available. Stay ahead of the competition with real-time alerts.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="/si/setup-alerts" class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-semibold bg-primary text-primary-foreground shadow-lg hover:opacity-90 transition-transform hover:-translate-y-1">
              Start Monitoring Now
            </a>
            <a href="#how-it-works" class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-semibold bg-transparent border-2 border-border text-foreground hover:bg-muted transition-colors">
              See How It Works
            </a>
          </div>
        </div>
        
        <div class="animate-on-scroll" data-delay="100">
          <img 
            src="/homepage/Amiquus_-_we_find_matching_cars.webp"
            alt="A mockup of the Amiquus car alert service on a mobile phone"
            class="rounded-xl shadow-2xl shadow-primary/10 w-full h-auto"
            loading="eager"
            decoding="async"
          />
        </div>
      </div>
    </div>
  </section>

<!-- "PROBLEM / SOLUTION" SECTION — Fixed dark swap via Tailwind dark:[background:...] -->
<section id="amiquus-probsol" class="relative py-16 sm:py-24 overflow-hidden" aria-labelledby="probsol-title">
  <!-- Ambient gradient backdrop (theme-driven) -->
  <div aria-hidden="true" class="absolute inset-0 pointer-events-none">
    <div class="absolute -top-40 left-1/2 h-[48rem] w-[48rem] -translate-x-1/2 rounded-full blur-3xl opacity-45"
         style="background:radial-gradient(35% 35% at 50% 50%, rgb(var(--amq-primary) / .28) 0%, transparent 60%)"></div>
    <div class="absolute bottom-[-30%] right-[-10%] h-[36rem] w-[36%] rounded-full blur-3xl opacity-35 dark:opacity-40"
         style="background:radial-gradient(40% 40% at 50% 50%, rgb(var(--amq-success) / .25) 0%, transparent 60%)"></div>
  </div>

  <div class="max-w-screen-xl mx-auto px-4">
    <!-- Header (forced-dark look preserved) -->
