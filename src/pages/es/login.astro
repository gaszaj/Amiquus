---
// src/pages/login.astro
import BaseLayout from '../../layouts/BaseLayout.astro';

// Page-specific metadata
const title = "Login - Amiquus";
const description = "Sign in to your Amiquus account to manage your car listing alerts and monitoring preferences.";

// Props for BaseLayout - placeholders for now.
const languageIso = "en";
const countryCode = "US";
const contentOrientation = "ltr";
const languageLinksMap: Record<string, string> = { 'en': '/en', 'de': '/de' };

const locale = Astro.url.pathname.split('/')[1] || 'en';
---

<BaseLayout
  languageIso={languageIso}
  countryCode={countryCode}
  contentOrientation={contentOrientation}
  title={title}
  description={description}
  languageLinksMap={languageLinksMap}
>
  <main class="flex items-center justify-center min-h-[calc(100vh-150px)] py-12 px-4">
    <div class="w-full max-w-md bg-card border border-border rounded-xl shadow-lg p-8 animate-on-scroll">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-foreground mb-2">Welcome Back</h1>
        <p class="text-muted-foreground">Sign in to your Amiquus account</p>
      </div>

      <!-- Error Message (hidden by default) -->
      <div id="error-message" class="bg-destructive/10 border border-destructive/20 text-destructive p-3 rounded-md mb-6 text-sm text-center hidden"></div>

      <!-- Google Login -->
      <button id="google-login-btn" class="w-full flex items-center justify-center gap-3 px-4 py-2.5 rounded-lg font-semibold bg-card border border-border text-foreground hover:bg-muted transition-colors">
        <svg width="20" height="20" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Continue with Google
      </button>

      <div class="flex items-center my-6">
        <hr class="flex-grow border-border"/>
        <span class="px-4 text-xs text-muted-foreground">or continue with email</span>
        <hr class="flex-grow border-border"/>
      </div>

      <!-- Login Form -->
      <form id="login-form" class="space-y-4">
        <div class="text-start">
          <label for="email" class="block text-sm font-medium text-foreground mb-1">Email Address</label>
          <input type="email" id="email" name="email" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary" placeholder="your@email.com" required>
        </div>
        <div class="text-start">
          <label for="password" class="block text-sm font-medium text-foreground mb-1">Password</label>
          <input type="password" id="password" name="password" class="w-full px-3 py-2 rounded-md border border-input bg-background text-foreground focus:border-primary focus:ring-1 focus:ring-primary" placeholder="••••••••" required>
        </div>
        <div class="text-end text-sm">
          <a href="/forgot-password" class="text-primary hover:underline">Forgot your password?</a>
        </div>
        <button type="submit" id="login-btn" class="w-full flex items-center justify-center px-6 py-3 rounded-lg font-semibold bg-primary text-primary-foreground hover:opacity-90 transition disabled:opacity-50 disabled:cursor-not-allowed">
          <span id="login-text">Sign In</span>
          <span id="login-loading" class="hidden"><div class="w-4 h-4 border-2 border-current border-t-transparent rounded-full animate-spin ms-2"></div></span>
        </button>
      </form>

      <div class="text-center mt-6 pt-6 border-t border-border text-sm text-muted-foreground">
        Don't have an account? <a href={`/${locale}/registration`} class="text-primary hover:underline font-semibold">Create one here</a>
      </div>
    </div>
  </main>
</BaseLayout>