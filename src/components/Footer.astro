---
// src/components/Footer.astro

// Get the current year dynamically for the copyright notice
const currentYear = new Date().getFullYear();
---

<footer id="contact" class="mt-16 bg-muted text-muted-foreground">
  <div class="max-w-screen-xl mx-auto px-4 py-16">
    <!-- Top content -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-10 mb-12">
      
      <!-- Company Info -->
      <!-- CHANGE 1: Breakpoint for text-alignment changed from sm: to lg: to match the final grid layout -->
      <div class="text-center lg:text-start lg:col-span-2">
        <h3 class="text-2xl font-bold text-foreground mb-4">Amiquus</h3>
        <p class="mb-6 text-sm leading-relaxed">
          Automated car listing monitoring service for professionals who need to stay ahead of the competition in the automotive market.
        </p>
        <!-- CHANGE 1: Breakpoint for item-alignment changed from sm: to lg: -->
        <div class="flex flex-col items-center lg:items-start gap-3 mb-6">
          <a href="mailto:support@amiquus.com" class="flex items-center gap-2 text-sm hover:text-primary transition-colors">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
            support@amiquus.com
          </a>
          <a href="https://t.me/AmiquusSupport" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-sm hover:text-primary transition-colors">
            <!-- CHANGE 2: Replaced with the correct Telegram paper plane icon -->
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
            Telegram Support
          </a>
        </div>
      </div>

      <!-- Product Links -->
      <!-- CHANGE 1: Breakpoint for text-alignment changed from sm: to lg: -->
      <div class="text-center lg:text-start">
        <h5 class="text-lg font-semibold text-foreground mb-4">Product</h5>
        <ul class="space-y-2 text-sm">
          <li><a href="#features" class="text-muted-foreground hover:text-primary transition-colors">Features</a></li>
          <li><a href="#pricing" class="text-muted-foreground hover:text-primary transition-colors">Pricing</a></li>
          <li><a href="/setup-alerts" class="text-muted-foreground hover:text-primary transition-colors">Setup Alerts</a></li>
          <li><a href="/waiting-list" class="text-muted-foreground hover:text-primary transition-colors">Waiting List</a></li>
          <li><a href="#how-it-works" class="text-muted-foreground hover:text-primary transition-colors">How It Works</a></li>
          <li><a href="/user-profile" class="text-muted-foreground hover:text-primary transition-colors">Dashboard</a></li>
        </ul>
      </div>

      <!-- Company Links -->
      <!-- CHANGE 1: Breakpoint for text-alignment changed from sm: to lg: -->
      <div class="text-center lg:text-start">
        <h5 class="text-lg font-semibold text-foreground mb-4">Company</h5>
        <ul class="space-y-2 text-sm">
          <li><a href="/author" class="text-muted-foreground hover:text-primary transition-colors">About Us</a></li>
          <li><a href="/author" class="text-muted-foreground hover:text-primary transition-colors">Meet Amiquus Seeker</a></li>
          <li><a href="#contact" class="text-muted-foreground hover:text-primary transition-colors">Contact</a></li>
          <li><a href="/careers" class="text-muted-foreground hover:text-primary transition-colors">Careers</a></li>
          <li><a href="/blog" class="text-muted-foreground hover:text-primary transition-colors">Blog</a></li>
          <li><a href="/news" class="text-muted-foreground hover:text-primary transition-colors">News</a></li>
        </ul>
      </div>

      <div class="text-center lg:text-start">
        <h5 class="text-lg font-semibold text-foreground mb-4">Legal</h5>
            <ul class="space-y-2 text-sm">
              <li><a href="/terms" class="text-muted-foreground hover:text-primary transition-colors">Terms of Service</a></li>
              <li><a href="/privacy" class="text-muted-foreground hover:text-primary transition-colors">Privacy Policy</a></li>
              <li><a href="/cookies" class="text-muted-foreground hover:text-primary transition-colors">Cookie Policy</a></li>
              <li><a href="/gdpr" class="text-muted-foreground hover:text-primary transition-colors">GDPR</a></li>
              <li><a href="/disclaimer" class="text-muted-foreground hover:text-primary transition-colors">Disclaimer</a></li>
              <li><a href="/licenses" class="text-muted-foreground hover:text-primary transition-colors">Licenses</a></li>
            </ul>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="border-t border-border pt-8 flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-muted-foreground">
      <div class="text-center md:text-start">
        <p>Â© {currentYear} Amiquus. All rights reserved.</p>
        <p class="text-xs">Designed for automotive industry professionals worldwide.</p>
      </div>
      <div class="flex flex-wrap justify-center gap-3 text-xs">
        <span class="flex items-center gap-1 px-3 py-1 bg-muted-foreground/10 border border-border rounded-full hover:text-primary hover:border-primary transition-colors">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2"/></svg>
          SSL Secured
        </span>
      </div>
    </div>
  </div>
</footer>