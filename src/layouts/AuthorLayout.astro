---
import BaseLayout from './BaseLayout.astro';
import { Image, type ImageMetadata } from 'astro:assets'; // Consolidated import

// --- Type Definitions for Props ---
export interface SocialLinksInfo {
  linkedin?: string;
  twitter?: string;
  website?: string;
  email?: string;
}

export interface LanguageInfo {
  name: string;
  flag: string; // Emoji or path to flag image, to be provided by page
}

// --- Content Props for Sections/UI Elements ---
export interface LayoutStrings {
  baseLayoutDescriptionPrefix: string;
  socialLinkLabelLinkedIn: string;
  socialLinkLabelTwitter: string;
  socialLinkLabelWebsite: string;
  socialLinkLabelEmail: string;
  jobTitleAtCompanySeparator: string; // e.g., " at "
  languagesSectionTitle: string;
  languagesSectionIcon: string; // e.g., "üåç"
  footerLinkAllAuthorsText: string;
  footerLinkAllAuthorsUrl: string;
  footerLinkEditorialPolicyText: string;
  footerLinkEditorialPolicyUrl: string;
}

// --- Main Props Interface ---
export interface Props {
  // Author Data (passed through for display)
  name: string;
  description: string; // This is the author's bio, part of their data
  image: ImageMetadata;
  socialLinks: SocialLinksInfo;
  jobTitle?: string;
  company?: string;
  // authorId: string; // Not directly used in layout's visual structure, can be page-specific

  // Data for display, sourced from page
  languages: LanguageInfo[];

  // All UI text and configuration for the layout itself
  layoutStrings: LayoutStrings;
}

const {
  name,
  description, // Author's bio
  image,
  socialLinks,
  jobTitle,
  company,
  languages,
  layoutStrings,
} = Astro.props;
---

<BaseLayout title={name} description={`${name} ‚Äî ${layoutStrings.baseLayoutDescriptionPrefix}`}>
  <!-- Dark Hero Section -->
  <div class="bg-black text-white py-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-8">
        <!-- Author Image -->
        <div class="md:w-1/3 flex-shrink-0">
          <div class="relative">
            <div class="absolute inset-0 bg-signal-green/20 rounded-full blur-2xl"></div>
            <Image 
              src={image} 
              alt={layoutStrings.authorImageAltText}
              width={200}
              height={200}
              class="relative w-48 h-48 object-cover rounded-full border-4 border-signal-green shadow-xl"
            />
          </div>
        </div>
        
        <!-- Author Info -->
        <div class="md:w-2/3">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{name}</h1>
          
          {jobTitle && ( // Simplified logic: if jobTitle exists, display it. Company is appended if it also exists.
            <p class="text-xl text-signal-green mb-6">
              {jobTitle}{company && `${layoutStrings.jobTitleAtCompanySeparator}${company}`}
            </p>
          )}
          
          <!-- Social Links -->
          <div class="flex items-center space-x-4 mb-6">
            {socialLinks.linkedin && (
              <a href={socialLinks.linkedin} class="text-gray-400 hover:text-signal-green transition-colors" target="_blank" rel="noopener">
                <span class="sr-only">{layoutStrings.socialLinkLabelLinkedIn}</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
              </a>
            )}
            
            {socialLinks.twitter && (
              <a href={socialLinks.twitter} class="text-gray-400 hover:text-signal-green transition-colors" target="_blank" rel="noopener">
                <span class="sr-only">{layoutStrings.socialLinkLabelTwitter}</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
              </a>
            )}
            
            {socialLinks.website && (
              <a href={socialLinks.website} class="text-gray-400 hover:text-signal-green transition-colors" target="_blank" rel="noopener">
                <span class="sr-only">{layoutStrings.socialLinkLabelWebsite}</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm1 16.057v-3.057h2.994c-.059 1.143-.212 2.24-.456 3.279-.823-.12-1.674-.188-2.538-.222zm1.957 2.162c-.499 1.33-1.159 2.497-1.957 3.456v-3.62c.666.028 1.319.081 1.957.164zm-1.957-7.219v-3.015c.868-.034 1.721-.103 2.548-.224.238 1.027.389 2.111.446 3.239h-2.994zm0-5.014v-3.661c.806.969 1.471 2.15 1.971 3.496-.642.084-1.3.137-1.971.165zm2.703-3.267c1.237.496 2.354 1.228 3.29 2.146-.642.234-1.311.442-2.019.607-.344-.992-.775-1.91-1.271-2.753zm-7.241 13.56c-.244-1.039-.398-2.136-.456-3.279h2.994v3.057c-.865.034-1.714.102-2.538.222zm2.538 1.776v3.62c-.798-.959-1.458-2.126-1.957-3.456.638-.083 1.291-.136 1.957-.164zm-2.994-7.055c.057-1.128.207-2.212.446-3.239.827.121 1.68.19 2.548.224v3.015h-2.994zm1.024-5.179c.5-1.346 1.165-2.527 1.97-3.496v3.661c-.671-.028-1.329-.081-1.97-.165zm-2.005-.35c-.708-.165-1.377-.373-2.018-.607.937-.918 2.053-1.65 3.29-2.146-.496.844-.927 1.762-1.272 2.753zm-.549 1.918c-.264 1.151-.434 2.36-.492 3.611h-3.933c.165-1.658.739-3.197 1.617-4.518.88.361 1.816.67 2.808.907zm.009 9.262c-.988.236-1.92.542-2.797.9-.89-1.328-1.471-2.879-1.637-4.551h3.934c.058 1.265.231 2.488.5 3.651zm.553 1.917c.342.976.768 1.881 1.257 2.712-1.223-.49-2.326-1.211-3.256-2.115.636-.229 1.299-.435 1.999-.597zm9.924 0c.7.163 1.362.367 1.999.597-.931.903-2.034 1.625-3.257 2.116.489-.832.915-1.737 1.258-2.713zm.553-1.917c.27-1.163.442-2.386.501-3.651h3.934c-.167 1.672-.748 3.223-1.638 4.551-.877-.358-1.81-.664-2.797-.9zm.501-5.651c-.058-1.251-.229-2.46-.492-3.611.992-.237 1.929-.546 2.809-.907.877 1.321 1.451 2.86 1.616 4.518h-3.933z"/></svg>
              </a>
            )}
            
            {socialLinks.email && (
              <a href={`mailto:${socialLinks.email}`} class="text-gray-400 hover:text-signal-green transition-colors">
                <span class="sr-only">{layoutStrings.socialLinkLabelEmail}</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M0 3v18h24v-18h-24zm6.623 7.929l-4.623 5.712v-9.458l4.623 3.746zm-4.141-5.929h19.035l-9.517 7.713-9.518-7.713zm5.694 7.188l3.824 3.099 3.83-3.104 5.612 6.817h-18.779l5.513-6.812zm9.208-1.264l4.616-3.741v9.348l-4.616-5.607z"/></svg>
              </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Section -->
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <!-- Description Card (Author's Bio) -->
      <div class="bg-black text-white p-8 rounded-xl mb-12 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-signal-green/10 rounded-full blur-3xl"></div>
        <div class="relative z-10">
          <p class="text-gray-300 leading-relaxed">{description}</p> {/* Author's bio passed as description prop */}
        </div>
      </div>

      <!-- Languages Section -->
      {languages && languages.length > 0 && (
        <div class="bg-black rounded-xl p-8 shadow-lg relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-signal-green/10 to-transparent"></div>
          <div class="relative z-10">
            <h2 class="text-2xl font-semibold mb-8 flex items-center text-white">
              <span class="text-signal-green mr-3">{layoutStrings.languagesSectionIcon}</span>
              {layoutStrings.languagesSectionTitle}
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {languages.map((language) => (
                  <div class="bg-gray-900/50 backdrop-blur-sm rounded-lg p-4 border border-gray-800 hover:border-signal-green transition-all duration-300 group flex items-center">
                    <span class="text-3xl mr-3 group-hover:scale-110 transition-transform duration-300">{language.flag}</span>
                    <h3 class="text-white font-semibold text-lg">{language.name}</h3>
                  </div>
                )
              )}
            </div>
          </div>
        </div>
      )}

      <!-- Footer Links -->
      <div class="mt-12 flex flex-col md:flex-row justify-between items-center gap-4 border-t border-gray-200 pt-8">
        <a href={layoutStrings.footerLinkAllAuthorsUrl} class="text-signal-dark hover:text-signal-green transition-colors">
          {layoutStrings.footerLinkAllAuthorsText}
        </a>
        <a href={layoutStrings.footerLinkEditorialPolicyUrl} class="text-signal-dark hover:text-signal-green transition-colors">
          {layoutStrings.footerLinkEditorialPolicyText}
        </a>
      </div>

      {/* Slot for any additional content specific to an author page, if needed in the future */}
      <slot /> 
    </div>
  </div>
</BaseLayout>

<style>
  /* Smooth animations */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .container { /* Applied to outer container, not each section individually for better performance */
    animation: fadeIn 0.5s ease-out;
  }
</style>