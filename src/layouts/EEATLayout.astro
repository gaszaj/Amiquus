---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  // Props for BaseLayout
  title: string;
  description?: string;
  
  // Props for article metadata
  publishDate: string;
  updateDate?: string;
  
  // Props for metadata labels
  publishedLabel: string;
  updatedLabel?: string;
  
  // Prop for date formatting locale
  dateLocale: string; 
}

const { 
  title, 
  description, 
  publishDate, 
  updateDate,
  publishedLabel,
  updatedLabel,
  dateLocale // Destructure the new locale prop
} = Astro.props;

// Format dates - uses the passed locale
const formatDate = (dateString: string, locale: string) => {
  return new Date(dateString).toLocaleDateString(locale, { // Use the locale prop here
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<BaseLayout title={title} description={description}>
  <!-- Dark Header Section -->
  <div class="bg-black text-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 animate-fade-in">{title}</h1>
        
        <!-- Publication Info -->
        <div class="flex flex-wrap items-center gap-2 text-lg animate-slide-up">
          <span class="text-signal-green">{publishedLabel} {formatDate(publishDate, dateLocale)}</span>
          {updateDate && updatedLabel && (
            <>
              <span class="text-gray-400">â€¢</span>
              <span class="text-signal-green">{updatedLabel} {formatDate(updateDate, dateLocale)}</span>
            </>
          )}
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-12">
    <div class="prose prose-lg max-w-4xl mx-auto">
      <slot /> {/* The main article content will be passed here */}
    </div>
  </div>
</BaseLayout>

<style>
  .prose {
    max-width: 65ch;
    margin-left: auto;
    margin-right: auto;
  }

  .prose h2 {
    color: var(--signal-dark); /* Assuming --signal-dark is defined globally or in BaseLayout */
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
    font-size: 1.875rem; /* Equivalent to text-3xl in Tailwind default */
    font-weight: 700;
  }
  
  .prose h3 {
    color: var(--signal-dark); /* Assuming --signal-dark is defined globally or in BaseLayout */
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.5rem; /* Equivalent to text-2xl */
    font-weight: 600;
  }
  
  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.75;
  }
  
  .prose ul {
    margin-bottom: 1.5rem;
    padding-left: 1.25rem; /* Equivalent to pl-5 */
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  /* Global animations - if not already defined in BaseLayout or a global CSS file */
  :global(.animate-fade-in) {
    animation: fadeIn 0.5s ease-in-out;
  }

  :global(.animate-slide-up) {
    animation: slideUp 0.5s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>