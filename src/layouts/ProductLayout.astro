<style>
  @keyframes shine { 100% { transform: translateX(100%); } }
  .animate-\[shine\_2s\_infinite\] { animation: shine 2s infinite; }
  details > summary { list-style: none; }
  details > summary::-webkit-details-marker { display: none; }

  /* Styles for Web3Forms validation messages */
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :invalid ~ .empty-feedback,
  .was-validated :invalid ~ .invalid-feedback { /* Simplified: if it's invalid, show the relevant message */
    display: block;
  }
  
  /* Specifically for :placeholder-shown to hide empty-feedback if user has typed something but it's still invalid (e.g. bad email format) */
  .was-validated :not(:placeholder-shown):invalid ~ .empty-feedback {
      display: none;
  }
   .was-validated :placeholder-shown:invalid ~ .invalid-feedback { /* e.g. if email is required and empty, show empty-feedback, not invalid-format-feedback */
      display: none;
  }


  /* Ensure radio/checkbox validation messages display correctly */
  .was-validated #payment-group:has(input[type="radio"]:invalid) .empty-feedback,
  .was-validated label:has(input[type="checkbox"]:invalid) + .empty-feedback {
     display: block;
  }


  .is-invalid, /* this class can be manually added by JS if needed */
  .was-validated :invalid {
    border-color: #dc3545; /* Tailwind's red-600 approx */
  }
   .was-validated :invalid:focus {
    --tw-ring-color: #dc3545;
     border-color: #dc3545;
  }
</style>

<script define:vars={{ 
    formSuccessMsg: layoutStrings.formSuccessMessage 
}}>
  document.addEventListener('astro:page-load', () => {
    // FAQ Accordion Logic
    const detailsElements = document.querySelectorAll('details');
    detailsElements.forEach(detail => {
      detail.addEventListener('toggle', () => {
        const summary = detail.querySelector('summary');
        if (summary) {
          if (detail.open) {
            summary.classList.add('group-open:rounded-b-none');
          } else {
            summary.classList.remove('group-open:rounded-b-none');
          }
        }
      });
    });

    // Web3Forms Submission Logic
    const productOrderForm = document.getElementById("productOrderForm");
    const productOrderFormResult = document.getElementById("productOrderFormResult");

    if (productOrderForm && productOrderFormResult) {
      productOrderForm.addEventListener("submit", function (e) {
        e.preventDefault();
        productOrderForm.classList.add("was-validated");
        
        // Check overall form validity
        if (!productOrderForm.checkValidity()) {
          // Find the first invalid element and focus it
          const firstInvalidElement = productOrderForm.querySelector(':invalid');
          if (firstInvalidElement) {
            firstInvalidElement.focus();
            // If it's a radio button, try to scroll its group into view.
            if (firstInvalidElement.type === 'radio' && firstInvalidElement.name) {
                const radioGroupContainer = document.getElementById('payment-group'); // ID of the div wrapping radio buttons
                if(radioGroupContainer) radioGroupContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
          }
          return; // Stop submission
        }
        
        // If valid, proceed with submission
        const formData = new FormData(productOrderForm);
        const object = Object.fromEntries(formData);
        const json = JSON.stringify(object);

        productOrderFormResult.innerHTML = "Pošiljanje..."; // Sending...
        productOrderFormResult.className = "md:col-span-2 mt-3 text-center text-gray-600"; 

        fetch("https://api.web3forms.com/submit", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            Accept: "application/json",
          },
          body: json,
        })
          .then(async (response) => {
            let jsonResponse = await response.json();
            if (response.status == 200) {
              productOrderFormResult.innerHTML = `<p class="text-green-600 text-lg font-semibold">${formSuccessMsg}</p>`; // Using passed prop
              productOrderForm.reset();
              productOrderForm.classList.remove("was-validated");
              Array.from(productOrderForm.elements).forEach(el => el.classList.remove('is-invalid'));
            } else {
              console.error("Form submission error response:", jsonResponse);
              productOrderFormResult.innerHTML = `<p class="text-red-500">${jsonResponse.message || "Prišlo je do napake. Prosimo, poskusite znova."}</p>`;
            }
          })
          .catch((error) => {
            console.error("Fetch error:", error);
            productOrderFormResult.innerHTML = `<p class="text-red-500">Nekaj je šlo narobe! Preverite povezavo in poskusite znova.</p>`;
          })
          .finally(() => { 
            // Clear message after 5 seconds only if it's not the success message, or always clear?
            // Let's clear it for error messages, but success can stay.
            // Or simply make the success message part of the flow that then fades.
            // For now, the success message will persist until next interaction due to form.reset().
            // If you want the success message to also disappear after 5s:
            setTimeout(() => {
              if (document.body.contains(productOrderFormResult) && productOrderFormResult.querySelector('.text-red-500')) { // only clear if it's an error
                 productOrderFormResult.innerHTML = ""; 
                 productOrderFormResult.className = "md:col-span-2 mt-3 text-center"; 
              }
            }, 7000); // Increased timeout for error messages
          });
      });
    }
  });
</script>