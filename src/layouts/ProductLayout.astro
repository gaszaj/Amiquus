              <p class="text-signal-gray mb-6">{layoutStrings.orderFormSubtitleBase} {title}.</p>

              {successMessage && !submissionResult?.error && (
                <div class="p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg" role="alert">
                  {successMessage}
                </div>
