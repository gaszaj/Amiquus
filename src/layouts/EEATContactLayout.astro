---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  // Props for BaseLayout
  title: string;  // SEO title
  headline: string;  // H1 headline
  description?: string;
  ogImage?: string;
  keywords?: string;
  
  // Props for article metadata
  publishDate: string;
  updateDate?: string;
  
  // Props for metadata labels
  publishedLabel: string;
  updatedLabel?: string;
  
  // Prop for date formatting locale
  dateLocale: string; 
  schema: object | null;

  // Props for contact form
  contactSection: {
    title: string;
    subtitle: string;
    formLabels: {
      fullName: string;
      fullNamePlaceholder: string;
      email: string;
      emailPlaceholder: string;
      message: string;
      messagePlaceholder: string;
      terms: string;
      submitButton: string;
    };
  };
  formAlerts: {
    invalidEmail: string;
    termsNotAccepted: string;
    submissionSuccess: string;
    submissionError: string;
  };
}

const { 
  title, 
  headline,
  description, 
  ogImage,
  keywords,
  publishDate, 
  updateDate,
  publishedLabel,
  updatedLabel,
  dateLocale,
  schema,
  contactSection,
  formAlerts
} = Astro.props;

// Format dates - uses the passed locale
const formatDate = (dateString: string, locale: string) => {
  return new Date(dateString).toLocaleDateString(locale, {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<BaseLayout title={title} description={description} ogImage={ogImage} keywords={keywords} schema={schema}>
  <!-- Dark Header Section -->
  <div class="bg-black text-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 animate-fade-in">{headline}</h1>
        
        <!-- Publication Info -->
        <div class="flex flex-wrap items-center gap-2 text-lg animate-slide-up">
          <span class="text-signal-green">{publishedLabel} {formatDate(publishDate, dateLocale)}</span>
          {updateDate && updatedLabel && (
            <>
              <span class="text-gray-400">â€¢</span>
              <span class="text-signal-green">{updatedLabel} {formatDate(updateDate, dateLocale)}</span>
            </>
          )}
        </div>
      </div>
    </div>
  </div>

  <!-- First Main Content Section -->
  <div class="container mx-auto px-4 pt-12">
    <div class="prose prose-lg max-w-4xl mx-auto">
      <slot name="before-form" />
    </div>
  </div>

  <!-- Contact Form Section -->
  <section class="pt-3 pb-8 bg-gray-50">
    <div class="container mx-auto px-4">
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        {contactSection.subtitle}
      </p>
      <div class="max-w-2xl mx-auto">
        <form class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-gray-600 mb-1">{contactSection.formLabels.fullName}</label>
            <input 
              type="text" 
              placeholder={contactSection.formLabels.fullNamePlaceholder}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-signal-green focus:ring-1 focus:ring-signal-green" 
              required
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600 mb-1">{contactSection.formLabels.email}</label>
            <input 
              type="email" 
              placeholder={contactSection.formLabels.emailPlaceholder}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-signal-green focus:ring-1 focus:ring-signal-green" 
              required
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600 mb-1">{contactSection.formLabels.message}</label>
            <textarea 
              rows="4" 
              placeholder={contactSection.formLabels.messagePlaceholder}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-signal-green focus:ring-1 focus:ring-signal-green"
              required
            ></textarea>
          </div>
          <div class="flex items-center gap-2">
            <input type="checkbox" id="terms" required />
            <label for="terms" class="text-sm text-gray-600">
              {contactSection.formLabels.terms}
            </label>
          </div>
          <button 
            type="submit" 
            class="w-full bg-black text-signal-green border border-signal-green py-3 rounded-lg hover:bg-signal-green hover:text-black transition-all"
          >
            {contactSection.formLabels.submitButton}
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Second Main Content Section -->
  <div class="container mx-auto px-4 py-12">
    <div class="prose prose-lg max-w-4xl mx-auto">
      <slot name="after-form" />
    </div>
  </div>
</BaseLayout>

<style>
  /* Base prose container */
  .prose {
    max-width: 65ch;
    margin-left: auto;
    margin-right: auto;
  }

  /* Headings */
  .prose :global(h2) {
    color: black;
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
  }
  
  .prose :global(h3) {
    color: black;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: 600;
  }
  
  /* Paragraphs */
  .prose :global(p) {
    color: #374151;
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }
  
  /* Links */
  .prose :global(a) {
    color: black;
    text-decoration: underline;
    text-decoration-color: #BCEF2F;
    text-underline-offset: 2px;
    transition: color 0.2s ease, text-decoration-color 0.2s ease;
  }

  .prose :global(a:hover) {
    color: #BCEF2F;
    text-decoration-color: black;
  }
  
  /* Lists */
  .prose :global(ul) {
    list-style-type: none;
    margin-left: 1.25rem;
    margin-bottom: 1.25rem;
  }

  .prose :global(li) {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.75rem;
    line-height: 1.75;
  }

  .prose :global(li::before) {
    content: "";
    position: absolute;
    left: 0;
    top: 0.75rem;
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background: #BCEF2F;
    border: 2px solid black;
  }

  /* Underline */
  .prose :global(u) {
    text-decoration: none;
    position: relative;
  }

  .prose :global(u::after) {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 2px;
    background: repeating-linear-gradient(
      45deg,
      #BCEF2F,
      #BCEF2F 2px,
      transparent 2px,
      transparent 4px
    );
  }

  /* List items with links */
  .prose :global(li a) {
    display: inline-block;
    margin-left: -0.25rem;
  }

  /* Spacing between sections */
  .prose :global(h2 + p) {
    margin-top: 1rem;
  }

  .prose :global(p + ul) {
    margin-top: 0.5rem;
  }

  /* Animations */
  :global(.animate-fade-in) {
    animation: fadeIn 0.5s ease-in-out;
  }

  :global(.animate-slide-up) {
    animation: slideUp 0.5s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>

<script define:vars={{ alerts: formAlerts }}>
document.addEventListener('DOMContentLoaded', () => {
  const form = document.querySelector('form');
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const emailInput = form.querySelector('input[type="email"]');
      if (emailInput && !emailInput.value.includes('@')) {
        alert(alerts.invalidEmail);
        return;
      }

      const termsCheckbox = form.querySelector('#terms');
      if (termsCheckbox && !termsCheckbox.checked) {
        alert(alerts.termsNotAccepted);
        return;
      }

      try {
        // Form submission logic here
        console.log('Form data would be submitted here.');
        alert(alerts.submissionSuccess);
        form.reset();
      } catch (error) {
        console.error('Form submission error:', error);
        alert(alerts.submissionError);
      }
    });
  }
});
</script>